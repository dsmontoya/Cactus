<div id="profile" ng-controller="ProfileController as profile" ng-init="load(<%=@user.to_json%>)">
<form name="profile_form" novalidate>
<!-- 
	<input name="authenticity_token" ng-model="profile.authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
-->  
<h2>{{created}}</h2>

	<div layout="column">
	  <md-content class="md-padding">
	    <form name="userForm">
	      <div layout layout-sm="column">
	      	<md-input-container flex>
	          <label>Email</label>
	          <input name="email" ng-model="profile.email" type="email">
	        </md-input-container>
	        <md-input-container flex>
	          <label>First Name</label>
	          <input name="first_name" ng-model="profile.first_name" type="text">
	        </md-input-container>
	        <md-input-container flex>
	          <label>Last Name</label>
	          <input name="last_name" ng-model="profile.last_name" type="text">
	        </md-input-container>
	      </div>
	      <md-input-container flex>
	        <label>School</label>
	        <input ng-model="profile.school">
	      </md-input-container>
	      <div layout layout-sm="column">
	      	<md-input-container flex>
	          <label>Facebook</label>
	          <input name="facebook" ng-model="profile.facebook" type="text">
	        </md-input-container>
	        <md-input-container flex>
	          <label>Twitter</label>
	          <input name="twitter" ng-model="profile.twitter" type="text">
	        </md-input-container>
	        <md-input-container flex>
	          <label>LinkedIn</label>
	          <input name="linkedin" ng-model="profile.linkedin" type="text">
	        </md-input-container>
	      </div>
	      <div layout layout-sm="column">
	      	<md-input-container flex>
	          <label>GitHub</label>
	          <input name="GitHub" ng-model="profile.github" type="text">
	        </md-input-container>
	        <md-input-container flex>
	          <label>Resume</label>
	          <input name="resume" ng-model="profile.resume" type="text">
	        </md-input-container>
	        <md-input-container flex>
	          <label>Website</label>
	          <input name="website" ng-model="profile.website" type="text">
	        </md-input-container>
	      </div>
	      <md-input-container flex>
	        <label>Biography</label>
	        <textarea ng-model="user.biography" columns="1" md-maxlength="150"></textarea>
	      </md-input-container>
	    </md-content>
	  </form>
	</div>

  <button ng-click="save(profile)">Save</button>
</form>
</div>


